DROP TABLE IF EXISTS srv_person;
/*-------------------------------------------------------------------------*/
/*.create*/
CREATE TABLE srv_person (
	id SERIAL PRIMARY KEY,
	name VARCHAR(20) NOT NULL UNIQUE,
	email VARCHAR(64) NOT NULL,
	fid INT NOT NULL,
	mid INT NOT NULL,
	master varchar(32) default NULL
)${.engine};
