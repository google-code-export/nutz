/*object.drop*/
DROP TABLE IF EXISTS nut_object;
/*-------------------------------------------------------------------------*/
/*object.create*/
CREATE TABLE nut_object (
  id SERIAL PRIMARY KEY,
  name VARCHAR(32) NOT NULL UNIQUE,
  parent VARCHAR(32),
  type VARCHAR(256),
  singleton BOOLEAN DEFAULT '0',
  cmt TEXT
);
/*lifecycle.drop*/
DROP TABLE IF EXISTS nut_lifecycle;
/*-------------------------------------------------------------------------*/
/*lifecycle.create*/
CREATE TABLE nut_lifecycle (
  id BIGINT PRIMARY KEY,
  born VARCHAR(100),
  depose VARCHAR(100),
  fetch VARCHAR(100)
);
/*-------------------------------------------------------------------------*/
/*field.drop*/
DROP TABLE IF EXISTS nut_field;
/*-------------------------------------------------------------------------*/
/*field.create*/
CREATE TABLE nut_field (
  oid BIGINT,
  name VARCHAR(32) NOT NULL,
  vid BIGINT
);
/*-------------------------------------------------------------------------*/
/*value.drop*/
DROP TABLE IF EXISTS nut_value;
/*-------------------------------------------------------------------------*/
/*value.create*/
CREATE TABLE nut_value (
  id SERIAL PRIMARY KEY,
  type VARCHAR(32),
  value TEXT 
);
/*-------------------------------------------------------------------------*/
/*args.drop*/
DROP TABLE IF EXISTS nut_obj_args;
/*-------------------------------------------------------------------------*/
/*args.create*/
CREATE TABLE nut_obj_args (
  oid BIGINT,
